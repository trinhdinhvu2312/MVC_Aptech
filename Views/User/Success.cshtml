@{
}
@model List<MVC_Aptech.Models.UserViewModel>

<h2>Registered Users</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FullName</td>
                    <td>@user.EncryptedPassword</td>
                </tr>
            }
        </tbody>
    </table>
</div>
